<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:00"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="30&#xb0;"
        android:paddingBottom="12dp"
        app:layout_constraintStart_toStartOf="@id/textView_hourly"
        app:layout_constraintEnd_toEndOf="@id/textView_hourly"
        app:layout_constraintTop_toBottomOf="@id/textView_hourly"/>

    <View
        android:id="@+id/view_V"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="@id/textView_hourly"
        app:layout_constraintStart_toEndOf="@id/textView_hourly"
        app:layout_constraintBottom_toBottomOf="@id/textView_temp"/>

</androidx.constraintlayout.widget.ConstraintLayout>